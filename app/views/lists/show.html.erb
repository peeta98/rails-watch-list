<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-4">
        <h1 class="text-center mb-3"><%= @list.name %></h1>
        <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill, class: "rounded-circle shadow-4-strong" %>
        <ul>
          <% @list.movies.each do |movie| %>
            <li class="mt-3"> <%= movie.title %>: <%= Bookmark.find_by(movie: movie, list: @list).comment %> <%= link_to "Delete Bookmark",
              bookmark_path(Bookmark.find_by(movie: movie, list: @list)), class: "btn btn-danger",
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
            %></li>
          <% end %>
        </ul>
        <div class="d-flex justify-content-between p-5">
          <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
          <%= link_to "Go back", lists_path, class: "btn btn-warning"%>
        </div>
    </div>
  </div>
</div>
