<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-4">
      <h1>New bookmark</h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.submit "Add new bookmark", class: "btn btn-primary mb-3" %>
      <% end %>
      <%= link_to "Go back", list_path(@list) %>
    </div>
  </div>
</div>
